<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_chapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/selector_chapter_item"
    android:paddingHorizontal="2dp"
    android:paddingVertical="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_chap_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Chapter 300" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_chap_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="My Name is Kozuki Oden" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_chap_release_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12 minutes ago" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_chap_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_download_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>