<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <objectAnimator android:valueFrom="0" android:valueTo="180" android:duration="300" android:valueType="floatType" android:propertyName="rotation" />
    </item>

    <item android:state_selected="false">
        <objectAnimator android:valueFrom="180" android:valueTo="0" android:duration="300" android:valueType="floatType" android:propertyName="rotation" />
    </item>
</selector>