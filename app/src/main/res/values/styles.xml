<resources>

    <style name="HeaderTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="HeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAppearance">@style/HeaderTextAppearance</item>
        <item name="drawableEndCompat">@drawable/ic_round_arrow_forward_24</item>
    </style>

    <style name="HeaderTextView.SearchDropDown">
        <item name="android:textAppearance">@style/SearchTextAppearance</item>
        <item name="drawableEndCompat">@drawable/level_rotate_arrow</item>
    </style>

    <style name="SearchDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorControlNormal">?attr/colorSecondary</item>
        <item name="textInputStyle">@style/SearchTextInputLayout</item>
        <item name="android:textViewStyle">@style/SearchTitleTextView</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="sliderStyle">@style/SearchSlider</item>
    </style>

    <style name="SearchEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">

        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:inputType">text</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">@dimen/search_field_height</item>
    </style>

    <style name="ThemeOverlay.SearchEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/SearchEditText</item>
    </style>

    <style name="SearchTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@null</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.SearchEditText</item>
    </style>

    <style name="SearchTextInputLayout.Spinner">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_round_keyboard_arrow_down_24</item>
        <item name="endIconTint">?attr/colorControlNormal</item>
    </style>

    <style name="SearchSlider" parent="Widget.MaterialComponents.Slider">
        <item name="android:stepSize">1</item>
        <item name="materialThemeOverlay">@style/PrimaryColorOverlay</item>
    </style>

    <style name="PrimaryColorOverlay">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>


    <style name="SearchTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/SearchTextAppearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:minHeight">@dimen/search_field_height</item>
    </style>

    <style name="SearchTextAppearance" parent="android:TextAppearance.Material.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MangaActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:actionModeCloseDrawable">@android:drawable/ic_menu_close_clear_cancel
        </item>
    </style>

    <style name="MangaBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored"></style>

    <style name="MangaProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackCornerRadius">16dp</item>
    </style>

    <style name="CircularProgressIndicator.Repeated" parent="Widget.MaterialComponents.CircularProgressIndicator">

        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateBehavior">cycle</item>
        <item name="indicatorSize">16dp</item>
        <item name="trackThickness">4dp</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

    <style name="Widget.MaterialComponents.ChipGroup.MangaChipGroup">
        <item name="chipSpacingHorizontal">4dp</item>
        <item name="chipSpacing">2dp</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Action.MangaChip">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">?attr/colorSecondary</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="chipMinTouchTargetSize">34dp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Light.MangaPageOverlay">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.ChapterTabLayout</item>
    </style>

    <style name="Widget.MaterialComponents.TabLayout.ChapterTabLayout">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>
</resources>